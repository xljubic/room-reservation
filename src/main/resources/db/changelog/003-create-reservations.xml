<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="003-create-reservations" author="sale">
        <createTable tableName="reservations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="start_datetime" type="DATETIME">
                <constraints nullable="false"/>
            </column>

            <column name="end_datetime" type="DATETIME">
                <constraints nullable="false"/>
            </column>

            <column name="purpose" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(120)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT"/>

            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>

            <column name="room_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="created_by_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="reservations"
                baseColumnNames="room_id"
                referencedTableName="rooms"
                referencedColumnNames="id"
                constraintName="fk_reservations_room"/>

        <addForeignKeyConstraint
                baseTableName="reservations"
                baseColumnNames="created_by_user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_reservations_created_by_user"/>

        <createIndex tableName="reservations" indexName="idx_reservations_room_id">
            <column name="room_id"/>
        </createIndex>

        <createIndex tableName="reservations" indexName="idx_reservations_created_by_user_id">
            <column name="created_by_user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
